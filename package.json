    "@nestjs/swagger": "^11.2.3",
    "lucide-react": "^0.258.0",
    "mongoose": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^19.2.3",
    "recharts": "^3.6.0",
